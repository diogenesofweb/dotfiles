{
  "Clamp": {
    "prefix": "clamp",
    "body": ["clamp(${1:1rem}, ${2:5vw}, ${3:2.5rem})"],
    "description": "Clamp"
  },
  "Media screen": {
    "prefix": "@media-width",
    "body": ["@media (${1|min-width,max-width|}: ${2:740}px) { \n\t$3\n}"],
    "description": "Media screen"
  },
  "Supports hover": {
    "prefix": "@hover-support",
    "body": ["@media (hover: hover) { \n\t$1\n}"],
    "description": "Supports hover"
  },
  "background": {
    "prefix": "bg",
    "body": "background: ${0:var(--bg)};",
    "description": "background: image position/size repeat attachment box box"
  },
  "background-color": {
    "prefix": "bgc",
    "body": "background-color: ${0:#fff};"
  },
  "display: flex": {
    "prefix": "df",
    "body": "display: flex;"
  },
  "display: grid": {
    "prefix": "dg",
    "body": "display: grid;"
  },
  "responsive grid columns": {
    "prefix": "grc",
    "body": "grid-template-columns: repeat(auto-fit, minmax(min(100%, ${0:10rem}), 1fr));"
  },
  "red box": {
    "prefix": "box",
    "body": "outline: 1px solid hsl(0 100% 50% / 50%);"
  },
  "border": {
    "prefix": "bor",
    "body": "border: ${0:var(--border)};"
  },
  "border radius": {
    "prefix": "br",
    "body": "border-radius: ${0:var(--br)};"
  },

  "padding inline": {
    "prefix": "pi",
    "body": "padding-inline: ${0:1rem};"
  },
  "padding inline start": {
    "prefix": "pis",
    "body": "padding-inline-start: ${0:1rem};"
  },
  "padding inline end": {
    "prefix": "pie",
    "body": "padding-inline-end: ${0:1rem};"
  },

  "padding block": {
    "prefix": "pb",
    "body": "padding-block: ${0:1rem};"
  },
  "padding block start": {
    "prefix": "pbs",
    "body": "padding-block-start: ${0:1rem};"
  },
  "padding block end": {
    "prefix": "pbe",
    "body": "padding-block-end: ${0:1rem};"
  },

  "margin inline": {
    "prefix": "mi",
    "body": "margin-inline: ${0:1rem};"
  },
  "margin block": {
    "prefix": "mb",
    "body": "margin-block: ${0:1rem};"
  },

  "align-items": {
    "prefix": "ai",
    "body": "align-items: ${1|flex-start,flex-end,center,baseline,stretch,start,end,self-start,self-end|};",
    "description": "initial value: stretch"
  },
  "justify-content": {
    "prefix": "jc",
    "body": "justify-content: ${1|flex-start,flex-end,center,space-between,space-around|};",
    "description": "initial value: flex-start"
  }
}
